<header>
  <h1>
    Very very afordable
  </h1>
  <ul>
    {% for link in linklists.main-menu.links -%}
      {{ link.title | link_to: link.url }}
    {%- endfor %}
  </ul>

  {% if settings.show_search %}
    <form action="/search">
      <input type="search" name="q">
      <button type="submit">Search</button>
    </form>
  {% endif %}
</header>

{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_search",
        "label": "Show search form?"
      }, {
        "type": "color",
        "id": "bg",
        "label": "Background color"
      }
    ]
  }
{% endschema %}